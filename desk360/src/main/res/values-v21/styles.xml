<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="DarkTextLabel" parent="Widget.Design.TextInputLayout">
        <item name="android:colorAccent">@color/light_theme_box_stroke_color</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorHint">@color/dark_theme_hint_color2</item>
        <item name="android:textSize">16sp</item>
        <item name="hintTextAppearance">@style/DarkHintText</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/light_theme_box_stroke_color</item>
        <item name="colorControlActivated">@color/white</item>
    </style>


    <style name="LightTextLabel" parent="Widget.Design.TextInputLayout">
        <item name="android:colorAccent">@color/light_theme_box_stroke_color</item>
        <item name="colorAccent">@color/light_theme_box_stroke_color</item>
        <item name="android:textColorHint">@color/light_theme_hint_color</item>
        <item name="android:textSize">16sp</item>
        <item name="hintTextAppearance">@style/LightHintText</item>
        <item name="colorControlNormal">@color/light_theme_text_color</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/light_theme_box_stroke_color</item>
        <item name="colorControlActivated">@color/light_theme_box_stroke_color</item>
    </style>

    <style name="DarkHintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark_theme_hint_color2</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="LightHintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/light_theme_hint_color</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
