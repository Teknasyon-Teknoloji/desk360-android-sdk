<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="-90"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1080">

    <shape
        android:shape="ring"
        android:useLevel="false">

        <gradient
            android:centerColor="#00436091"
            android:centerY="0.5"
            android:endColor="#436091"
            android:startColor="#00436091"
            android:type="sweep"
            android:useLevel="false">

        </gradient>

    </shape>

</rotate>