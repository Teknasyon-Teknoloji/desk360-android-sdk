<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="DarkHintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark_theme_hint_color2</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="LightHintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark_theme_hint_color2</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="LightAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="DarkAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorDesk360Type4Progress</item>
    </style>
    <style name="DarkThemeToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/dark_theme_toolbar_bg_color</item>
        <item name="colorAccent">@color/dark_theme_toolbar_bg_color</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

</resources>